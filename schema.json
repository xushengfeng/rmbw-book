{
    "$schema": "http://json-schema.org/draft-07/schema#",
    "type": "object",
    "properties": {
        "books": {
            "type": "array",
            "items": {
                "type": "object",
                "properties": {
                    "name": {
                        "type": "string"
                    },
                    "shortName": {
                        "type": "string"
                    },
                    "id": {
                        "type": "string"
                    },
                    "type": {
                        "type": "string",
                        "enum": ["word", "text", "package"]
                    },
                    "cover": {
                        "type": "string"
                    },
                    "note": {
                        "type": "string"
                    },
                    "description": {
                        "type": "string"
                    },
                    "updateTime": {
                        "type": "integer"
                    },
                    "titleParse": {
                        "type": "string"
                    },
                    "titleIndex": { "type": "array", "items": { "type": "integer" } },
                    "sections": {
                        "type": "array",
                        "items": {
                            "type": "object",
                            "properties": {
                                "id": {
                                    "type": "string"
                                },
                                "title": {
                                    "type": "string"
                                },
                                "path": {
                                    "type": "string"
                                }
                            },
                            "additionalProperties": false,
                            "required": ["id", "title", "path"]
                        }
                    },
                    "language": {
                        "type": "string"
                    },
                    "wordSplit": {
                        "type": "string",
                        "enum": ["grapheme", "word"]
                    },
                    "coverage": {
                        "type": "object",
                        "patternProperties": {
                            ".*": {
                                "type": "array",
                                "items": [{ "type": "number" }, { "type": "number" }]
                            }
                        }
                    }
                },
                "additionalProperties": false,
                "required": ["name", "id", "type", "updateTime", "sections", "language"]
            }
        }
    }
}
